{
  "schemaVersion": 1,
  "id": "talkative",
  "version": "${version}",
  "name": "Talkative",
  "description": "A mod for adding Dialog Trees to Entities! Made for Crypts & Creepers.",
  "authors": [
    "RyanV"
  ],
  "license": "MIT",
  "icon": "assets/talkative/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "dev.cryptcraft.talkative.fabric.TalkativeFabric"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "dev.cryptcraft.talkative.fabric.TalkativeClientFabric"
      }
    ]
  },
  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric": "*",
    "minecraft": ">=1.19.2",
    "architectury": ">=6.5.77",
    "fabric-language-kotlin": ">=1.9.5+kotlin.1.8.22"
  },
  "mixins": [
    "talkative.mixins.json"
  ]
}